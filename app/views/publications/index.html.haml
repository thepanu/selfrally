.card
  .card-header
    %h3.d-inline Publications
    .d-inline.float-right= link_to "Add new Publication", new_publication_path, class: 'btn btn-primary'
  .card-body
    .card
      .card-block
        .row.input-group
          .col-md-8
          .col-md-3
            = form_for_filterrific @filterrific do |f|
              %div
                = f.text_field(:search_query, class: 'filterrific-periodically-observed')
          .col-md-1
            = link_to 'Reset filters', reset_filterrific_url, class: 'btn btn-primary'
      .card-body
        = render partial: 'publications/list', locals: {publications: @publications }
