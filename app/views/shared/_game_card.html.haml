.card.w-75.mb-3
  .card-header
    .row
      .col-sm-3= game.date.strftime("%d.%m.%Y")
      .col-sm-6.text-center= link_to game.scenario.name, scenario_path(game.scenario)
      .col-sm-3
        %span.float-right= link_to "Report #{game.id}", game_path(game)
  .card-body
    .row
      .col-sm-5= render 'shared/player_in_game_card', :player => game.player_by_initiative(true), :init => true
      .col-sm-2
        %h3 VS
      .col-sm-5= render 'shared/player_in_game_card', :player => game.player_by_initiative(false), :init => false 
