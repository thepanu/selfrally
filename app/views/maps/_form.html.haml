=form_for map do |form|
  - if map.errors.any?
    .alert.alert-danger#error_explanation
      %h4 #{pluralize(map.errors.count, "error")} prohibited this map from being saved:
      - map.errors.full_messages.each do |message|
        .row.ml-3= message
  .ml-3
    .form-group.row
      = form.label :name, class: 'col-sm-2 col-form-label'
      .col-sm-10
        = form.text_field :name, id: :map_name, class: 'form-control'
    .actions
      = form.submit "Save", class: 'btn btn-primary'
      = link_to 'Cancel', maps_path, class: 'btn btn-warning'
