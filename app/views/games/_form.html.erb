<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :game_date %>
  </div>

  <div class="field">
    <%= form.label :scenario_id %>
    <%= form.number_field :scenario_id, id: :game_scenario_id %>
  </div>

  <div class="field">
    <%= form.label :gamingtime %>
    <%= form.text_field :gamingtime, id: :game_gamingtime %>
  </div>

  <div class="field">
    <%= form.label :turnsplayed %>
    <%= form.text_field :turnsplayed, id: :game_turnsplayed %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status, id: :game_status %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
